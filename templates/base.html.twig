<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('uploads/icon.png') }}" alt="Image">
        <link rel= "stylesheet" href="https://bootswatch.com/5/quartz/bootstrap.min.css">
        <style>
h1{
    text-align: center;
    margin-top: 50px;
    font-size: 50px;
}

h5{
    text-align: center;
}

ul {
    list-style-type: none; /* Enlève les puces */
}
            
.li_apprentissage{
    display:block;
    justify-content: center;
    align-items: center;
}

/* Conteneur principal pour les cartes */
.card-container {
    display: flex;
    justify-content: center; /* Centre les cartes horizontalement */
    align-items: center; /* Centre verticalement si nécessaire */
    gap: 70px; /* Augmente l'espacement entre les cartes */
    margin-top: 100px;
}

/* Style des cartes */
.flip-card {
    background-color: transparent;
    width: 625px; /* Largeur augmentée */
    height: 500px; /* Hauteur augmentée */
    perspective: 1000px;
    cursor: pointer;
}

/* Partie interne des cartes */
.flip-card-inner {
    width: 100%;
    height: 100%;
    text-align: center;
    transition: transform 0.8s;
    transform-style: preserve-3d;
}

/* Faces des cartes */
.flip-card-front, .flip-card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 15px; /* Coins arrondis plus prononcés */
    box-shadow: 0 6px 10px rgba(0, 0, 0, 0.2);
}

/* Face avant */
.flip-card-front {
    background: linear-gradient(90deg, #fa7ed1,#8886fc);
    color: white;
    font-size: 30px;
}


.flip-card-back {
    background: linear-gradient(270deg, #fa7ed1,#8886fc);
    color: white;
    font-size: 24px; 
    transform: rotateY(180deg);
}


.flip-card-inner.flipped {
    transform: rotateY(180deg);
}


.form-container {
    display: flex;
    justify-content: center; 
    align-items: center; 
    margin-top: 50px;
    height:150%; 
}


.formulaire {
    padding: 10px 30px;
    border-radius: 10px;
    width: 300px;
    display: flex;
    flex-direction: column;
    gap: 5px;
    text-align:center;
}

.submit-btn {
            width: 100%;
            background:transparent;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

        .submit-btn:hover {
            background-color:linear-gradient(270deg, #fa7ed1,#8886fc);
        }
h6{
    text-align: left;
}
h4{
    text-align:center;
    font-size:35px;
}

h2{
    font-size:50px;
}
h3{
    font-size:40px;
}

.apprentissage_critique {
    display: block !important;
    text-align: left !important;
    font-weight: bold !important;
    text-decoration: none !important;
    margin-bottom: 15px !important;
    line-height: 1.5 !important;
    color: white !important;
}

</style>
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
    </body>
</html>
